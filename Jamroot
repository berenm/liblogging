import path ;

lib boost_thread ;
lib boost_program_options ;
lib boost_filesystem ;
lib boost_regex ;
lib boost_iostreams ;
lib boost_date_time ;
lib boost_system ;

project liblogging : requirements
  <library>boost_thread
  <library>boost_program_options
  <library>boost_filesystem
  <library>boost_regex
  <library>boost_iostreams
  <library>boost_date_time
  <library>boost_system
  <include>include/
  <threading>multi
  <cflags>-std=c++0x
  ;


lib logging : src/logging/logging.cpp ;


install lib64so_dist 
    : logging
    : <location>./dist/lib64/
      <link>shared ;
    
#install lib32so_dist 
#    : logging
#    : <location>./dist/lib32/
#      <link>shared 
#      <architecture>x86
#      <address-model>32 ;
      
install lib64a_dist 
    : logging
    : <location>./dist/lib64/
      <link>static ;
    
